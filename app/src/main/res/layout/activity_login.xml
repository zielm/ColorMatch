<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context=".LoginActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Zaloguj się:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:id="@+id/descriptionLogin"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/loginLogin"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/loginPassword"/>
        <Button
                android:text="Zaloguj się"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonLogin"/>
        <TextView
                android:text="Nie masz konta? Zarejestruj się!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/descriptionRegister"/>
        <Button
                android:text="Zarejestruj się"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonRegister"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>