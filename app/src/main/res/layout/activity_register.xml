<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context=".RegisterActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Zarejestruj się!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:id="@+id/textViewRegistration"/>
        <TextView
                android:text="Login:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/labelLogin"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/registerLogin"/>
        <TextView
                android:text="Hasło:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/labelPassword"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/registerPassword"/>
        <TextView
                android:text="Powtórz hasło:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/labelPassword2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/registerPassword2"/>
        <Button
                android:text="Zarejestruj się"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonRegister"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>