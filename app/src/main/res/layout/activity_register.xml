<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context=".RegisterActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_above="@id/buttonBack"
            android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/colormatch_logo"
                android:id="@+id/imageView4" android:layout_weight="1"/>
        <TextView
                android:text="Registration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_weight="4"
                android:id="@+id/textViewRegistration"/>
    </LinearLayout>
        <TextView
                android:text="Login:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/labelLogin"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/registerLogin"/>
        <TextView
                android:text="Password:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/labelPassword"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/registerPassword"/>
        <TextView
                android:text="Confirm password:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/labelPassword2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/registerPassword2"/>
        <Button
                android:text="register"
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" android:id="@+id/buttonRegister"/>
    </LinearLayout>
    <Button
            android:text="Return"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack"/>
</RelativeLayout>