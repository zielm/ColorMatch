<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".StartGame">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_above="@id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/colormatch_logo"
                android:id="@+id/imageView2"/>
        <TextView
                android:layout_width="300dp"
                android:paddingVertical="5dp"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_height="wrap_content" android:id="@+id/welcomeMessage"/>
        <Button
                android:text="Start game"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/buttonStart"/>
        <Button
                android:text="Ranking"
                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/buttonRanking"/>
          </LinearLayout>
    <Button
            android:text="Logout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="wrap_content" android:id="@+id/buttonLogout"/>
</RelativeLayout>