<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Does the name from the upper block match with the color of a word written on the bottom one?"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description"
        />
        <TextView
                android:gravity="center"
                android:background="@android:color/white"
                android:layout_marginBottom="30dp"
                android:textSize="40sp"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:id="@+id/textQuestion"
        />
        <TextView
                android:gravity="center"
                android:background="@android:color/white"
                android:layout_marginBottom="30dp"
                android:textSize="40sp"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:id="@+id/textAnswer"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="True"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textSize="30sp"
                    android:id="@+id/buttonTrue"
                    android:layout_weight="1"
            />
            <Button
                    android:text="False"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textSize="30sp"
                    android:id="@+id/buttonFalse"
                    android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="Refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttonRefresh"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textResult"/>
    </LinearLayout>
</RelativeLayout>